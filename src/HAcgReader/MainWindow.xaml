<Window x:Class="HAcgReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HAcgReader"
        mc:Ignorable="d"
        Title="琉璃神社阅读器" Height="500" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <!--左侧列表-->
            <ColumnDefinition Width="300"/>
            <!--分隔符-->
            <ColumnDefinition Width="2"/>
            <!--右侧详情页-->
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <!--#region 左侧列表-->
        <ListView Grid.Column="0"
                  d:ItemsSource="{d:SampleData ItemCount=20}"
                  ScrollViewer.VerticalScrollBarVisibility="Disabled">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="BorderBrush" Value="Gray"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    <Setter Property="Margin" Value="0,0,0,4"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="{Binding PageTitle}"
                                   FontWeight="Bold"/>
                        <TextBlock Text="{Binding Links}"
                                   Foreground="Gray"/>
                        <ItemsControl ItemsSource="{Binding Categories}"
                                      d:ItemsSource="{d:SampleData ItemCount=3}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}"
                                               Foreground="#1982D1"
                                               Margin="0,0,5,0"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <!--#endregion-->
        <GridSplitter Grid.Column="1" Width="2" HorizontalAlignment="Stretch"/>
        <!--#region 右侧详情页-->
        <StackPanel Grid.Column="2"
                    Margin="5,0,0,0"
                    DataContext="{Binding Detail}"
                    Visibility="{Binding DetailVisibility}"
                    d:Visibility="Visible">
            <TextBlock d:Text="标题" FontWeight="Bold" FontSize="20" Margin="0,0,0,3"/>
            <StackPanel>
                <TextBlock Text="检测到的磁力链接（单击复制）" Margin="0,0,0,3"/>
                <ItemsControl d:ItemsSource="{d:SampleData ItemCount=3}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Margin="0,0,0,1">
                                <Hyperlink>
                                    <TextBlock Text="{Binding Link}"/>
                                </Hyperlink>
                            </TextBlock>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Separator/>
                <TextBlock>
                    <TextBlock Text="{Binding Creator}" d:Text="Creator"/>
                    发布于 <TextBlock Text="{Binding PubDate}" d:Text="2020年1月1日"/>
                    |
                    <Hyperlink NavigateUri="{Binding Link}">阅读文章</Hyperlink>
                    |
                    <Hyperlink NavigateUri="{Binding CommentLink}">
                        <TextBlock Text="{Binding CommentCount}" d:Text="50"/> 条评论
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </StackPanel>
        <!--#endregion-->
    </Grid>
</Window>
